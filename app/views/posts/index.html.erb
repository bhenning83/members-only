<h1>All Posts</h1>

<%= link_to 'New Post', new_posts_path %><br /><br />

<% @posts = Post.all.order(created_at: :desc) %>
<% @posts.each do |post| %>
  <h3><%= post.title %></h3>
  <p><%= post.body %></p>
  <% if user_signed_in? %>
    <p>-<%= post.user.username %></p>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>
<% end %>